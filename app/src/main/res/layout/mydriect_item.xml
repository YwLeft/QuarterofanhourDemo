<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.asus.quarterofanhourdemo.view.iview.AnimationImage
            android:id="@+id/my_driect_item_tou"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_margin="15dp"
            android:src="@drawable/raw_1500033586" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_driect_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="炸鸡和啤酒评论了你的作品《风景》"
                android:textColor="@color/colorhui"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/my_driect_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="03-05 17:23"
                android:textColor="@color/colorhui"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_driect_wood"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拍照水平可以，一级棒~！"
                android:textColor="@color/colorhui"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/my_driect_item_title"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
           android:layout_marginRight="@dimen/x40"
            android:background="@drawable/raw_1500033586" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorhui"
        android:layout_marginLeft="@dimen/y145"/>


</LinearLayout>

